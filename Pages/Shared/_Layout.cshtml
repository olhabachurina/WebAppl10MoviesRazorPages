<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Top10Movies</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                 <a class="navbar-brand" href="#">Top10Movies</a>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/About">Exit</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        @RenderBody()
    </div>
    <footer class="text-center py-4">
        <p>&copy; 2024 - Top10Movies</p>
    </footer>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

   
    <div id="left-curtain" class="curtain left-curtain"></div>
    <div id="right-curtain" class="curtain right-curtain"></div>
    
    <script>
        document.querySelector('.exit-link').addEventListener('click', function (e) {
            e.preventDefault();

            // Показать шторы, если они были скрыты
            document.getElementById("left-curtain").style.display = "block";
            document.getElementById("right-curtain").style.display = "block";
            document.getElementById("curtains").style.display = "flex";

            setTimeout(function () {
                // Запуск анимации закрытия штор
                document.getElementById("left-curtain").classList.add('curtain-close-left');
                document.getElementById("right-curtain").classList.add('curtain-close-right');

                // Задержка 1 минута (60 секунд) перед переходом на новую страницу
                setTimeout(function () {
                    window.location.href = '/About';
                }, 60000); // 60 секунд = 60000 миллисекунд

            }, 0); // Запуск анимации без задержки
        });
    </script>

    
    @RenderSection("Scripts", required: false)
</body>
</html>